---
// Extract the properties from Astro.props
const { title, subTitle, id } = Astro.props;
// Define TypeScript interface for the properties
interface Props {
  title: string;
  subTitle: string;
  id?: string;
}
---

<!-- Container for the title and subtitle -->
<div class="lg:pe-6 xl:pe-12 text-center" id={id}>
  <p class="text-7xl font-bold leading-10 text-red-500 dark:text-red-700">
    {title}
  </p>
  <p class="mt-2 text-neutral-600 dark:text-neutral-400 sm:mt-3">{subTitle}</p>
</div>