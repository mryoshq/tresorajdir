---
// AboutBenefits component for the benefits section
interface Benefit {
  icon: string;
  title: string;
  description: string;
}

interface Props {
  title: string;
  subtitle: string;
  benefits: Benefit[];
}

const { title, subtitle, benefits } = Astro.props;
---

<section class="bg-green-50 dark:bg-green-900/10 py-16">
  <div class="mx-auto max-w-[85rem] px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-neutral-800 dark:text-neutral-200 mb-4">
        {title}
      </h2>
      <p class="text-lg text-neutral-600 dark:text-neutral-400 max-w-3xl mx-auto">
        {subtitle}
      </p>
    </div>
    
    <div class="grid md:grid-cols-3 gap-8">
      {benefits.map((benefit) => (
        <div class="text-center p-6 bg-white dark:bg-green-300/20 rounded-xl shadow-lg">
          <div class="w-16 h-16 bg-green-100 dark:bg-green-800 rounded-full flex items-center justify-center mx-auto mb-4">
            <div class="w-8 h-8 text-green-600 dark:text-green-400" set:html={benefit.icon}></div>
          </div>
          <h3 class="text-xl font-semibold text-neutral-800 dark:text-neutral-200 mb-3">
            {benefit.title}
          </h3>
          <p class="text-neutral-600 dark:text-neutral-400">
            {benefit.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
