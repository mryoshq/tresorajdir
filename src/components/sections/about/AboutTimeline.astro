---
// AboutTimeline component for the timeline section
interface TimelineItem {
  year: string;
  title: string;
  description: string;
}

interface Props {
  title: string;
  subtitle: string;
  timeline: TimelineItem[];
}

const { title, subtitle, timeline } = Astro.props;
---

<section class="mx-auto max-w-[85rem] px-4 py-16 sm:px-6 lg:px-8">
  <div class="text-center mb-12">
    <h2 class="text-3xl font-bold text-neutral-800 dark:text-neutral-200 mb-4">
      {title}
    </h2>
    <p class="text-lg text-neutral-600 dark:text-neutral-400 max-w-3xl mx-auto">
      {subtitle}
    </p>
  </div>
  
  <div class="relative">
    {/* Timeline line */}
    <div class="absolute left-1/2 transform -translate-x-1/2 w-0.5 h-full bg-green-200 dark:bg-green-800"></div>
    
    {/* Timeline items */}
    <div class="space-y-12">
      {timeline.map((item, index) => (
        <div class="relative flex items-center">
          <div class="absolute left-1/2 transform -translate-x-1/2 w-4 h-4 bg-green-500 rounded-full border-4 border-white dark:border-neutral-800"></div>
          <div class={`w-5/12 ${index % 2 === 0 ? 'pr-8 text-right' : 'pl-8 ml-auto'}`}>
            <h3 class="text-xl font-semibold text-neutral-800 dark:text-neutral-200 mb-2">{item.year} - {item.title}</h3>
            <p class="text-neutral-600 dark:text-neutral-400">{item.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
