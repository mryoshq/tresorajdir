---
// AboutFoundingStory component for the founding story section
interface Props {
  title: string;
  description1: string;
  description2: string;
  description3: string;
  imageSrc: string;
  imageAlt: string;
}

const { title, description1, description2, description3, imageSrc, imageAlt } = Astro.props;
---

<section class="bg-neutral-50 dark:bg-neutral-900/10 py-16">
  <div class="mx-auto max-w-[85rem] px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div class="order-2 lg:order-1">
        <img 
          src={imageSrc} 
          alt={imageAlt} 
          class="rounded-2xl shadow-2xl"
        />
      </div>
      <div class="order-1 lg:order-2">
        <h2 class="text-3xl font-bold text-neutral-800 dark:text-neutral-200 mb-6">
          {title}
        </h2>
        <p class="text-lg text-neutral-600 dark:text-neutral-400 mb-6 leading-relaxed">
          {description1}
        </p>
        <p class="text-lg text-neutral-600 dark:text-neutral-400 mb-6 leading-relaxed">
          {description2}
        </p>
        <p class="text-lg text-neutral-600 dark:text-neutral-400 leading-relaxed">
          {description3}
        </p>
      </div>
    </div>
  </div>
</section>
