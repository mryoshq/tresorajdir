---
// AboutHero component for the main about section
interface Props {
  title: string;
  subtitle: string;
  description1: string;
  description2: string;
  stats: {
    experience: string;
    experienceLabel: string;
    sustainability: string;
    sustainabilityLabel: string;
  };
  imageSrc: string;
  imageAlt: string;
}

const { title, description1, description2, stats, imageSrc, imageAlt } = Astro.props;
---

<section class="mx-auto max-w-[85rem] px-4 py-16 sm:px-6 lg:px-8">
  <div class="grid lg:grid-cols-2 gap-12 items-center">
    <div>
      <h2 class="text-3xl font-bold text-neutral-800 dark:text-neutral-200 mb-6">
        {title}
      </h2>
      
      <p class="text-lg text-neutral-600 dark:text-neutral-400 mb-6 leading-relaxed">
        {description1}
      </p>
      <p class="text-lg text-neutral-600 dark:text-neutral-400 mb-6 leading-relaxed">
        {description2}
      </p>
      <div class="grid grid-cols-2 gap-6 mt-8">
        <div class="text-center">
          <div class="text-3xl font-bold text-green-600 dark:text-green-400 mb-2">{stats.experience}</div>
          <div class="text-sm text-neutral-600 dark:text-neutral-400">{stats.experienceLabel}</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-green-600 dark:text-green-400 mb-2">{stats.sustainability}</div>
          <div class="text-sm text-neutral-600 dark:text-neutral-400">{stats.sustainabilityLabel}</div>
        </div>
      </div>
    </div>
    <div class="relative">
      <img 
        src={imageSrc} 
        alt={imageAlt} 
        class="rounded-2xl shadow-2xl"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent rounded-2xl"></div>
    </div>
  </div>
</section>
