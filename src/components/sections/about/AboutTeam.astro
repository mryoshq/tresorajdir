---
// AboutTeam component for the team section
interface TeamMember {
  name: string;
  role: string;
  bio: string;
}

interface Props {
  title: string;
  subtitle: string;
  team: TeamMember[];
}

const { title, subtitle, team } = Astro.props;
---

<section class="mx-auto max-w-[85rem] px-4 py-16 sm:px-6 lg:px-8">
  <div class="text-center mb-12">
    <h2 class="text-3xl font-bold text-neutral-800 dark:text-neutral-200 mb-4">
      {title}
    </h2>
    <p class="text-lg text-neutral-600 dark:text-neutral-400 max-w-3xl mx-auto">
      {subtitle}
    </p>
  </div>
  
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
    {team.map((member) => (
      <div class="text-center">
        <div class="w-32 h-32 mx-auto mb-4 rounded-full overflow-hidden bg-green-100 flex items-center justify-center">
          <svg class="w-16 h-16 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-neutral-800 dark:text-neutral-200 mb-2">
          {member.name}
        </h3>
        <p class="text-green-600 dark:text-green-400 font-medium mb-3">{member.role}</p>
        <p class="text-neutral-600 dark:text-neutral-400">
          {member.bio}
        </p>
      </div>
    ))}
  </div>
</section>
