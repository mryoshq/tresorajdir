---
// Import section components
import MainLayout from "@/layouts/MainLayout.astro";
import Btn404 from "@components/ui/buttons/Btn404.astro";
import { SITE } from "@data/constants";

// Define types for translations
type TranslationKeys = "en" | "fr";
type Translations = {
  [key in TranslationKeys]: {
    pageTitle: string;
    subTitle: string;
    content: string;
    btnTitle: string;
  };
};

// Define variables for page content
const translations: Translations = {
  en: {
    pageTitle: `Page Not Found | ${SITE.title}`,
    subTitle: "Page Not Found",
    content:
      "The page you are looking for does not exist or may have been moved. Please return to the previous page or go back to the homepage.",
    btnTitle: "Go Back",
  },
  fr: {
    pageTitle: `Page Non Trouvée | ${SITE.title}`,
    subTitle: "Page non trouvée",
    content:
      "La page que vous recherchez n'existe pas ou a peut-être été déplacée. Veuillez revenir à la page précédente ou retourner à l'accueil.",
    btnTitle: "Retour",
  },
};

// Determine language from the URL path
const urlPath = Astro.url.pathname;
const isFrenchPath = !urlPath.startsWith('/en/') && urlPath !== '/en';
const currentLocale: TranslationKeys = isFrenchPath ? "fr" : "en";

const { pageTitle, subTitle, content, btnTitle } = translations[currentLocale];
---

<MainLayout title={pageTitle} lang={currentLocale}>
  <section class="grid h-svh place-content-center">
    <div class="mx-auto max-w-(--breakpoint-xl) px-4 py-8 lg:px-6 lg:py-16">
      <div class="mx-auto max-w-(--breakpoint-sm) text-center">
        <h1
          class="text-dark mb-4 text-7xl font-extrabold text-red-500 dark:text-red-700 lg:text-9xl"
        >
          404
        </h1>
        <p
          id="subtitle"
          class="mb-4 text-balance text-3xl font-bold tracking-tight text-neutral-700 dark:text-neutral-300 md:text-4xl"
        >
          {subTitle}
        </p>
        <p
          id="content"
          class="mb-4 text-pretty text-lg text-neutral-600 dark:text-neutral-400"
        >
          {content}
        </p>
        <!-- Display a button that navigates user back to the previous page -->
        <Btn404 title={btnTitle} id="go-back" />
      </div>
    </div>
  </section>
</MainLayout>

<!-- JavaScript code to handle going back to the previous page -->
<script>
  const goBackButton = document.getElementById("go-back") as HTMLButtonElement;

  goBackButton.addEventListener("click", () => {
    history.back();
  });
</script>
