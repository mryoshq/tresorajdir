---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";
import FourImageSection from "@components/ui/blocks/FourImageSection.astro";
import { getRelativeLocaleUrl } from 'astro:i18n';

// Import necessary images
import rose from "@images/rose.jpg";
import personWorking from "@images/person-working.jpg";
import treeCover from "@images/treeCover.jpg";
import applebasket from "@images/applebasket.jpg";
import aerialView from "@images/aerial-view.jpg";
import harvestSet from "@images/harvestSet.jpg";
import redApples from "@images/red-apples.jpg";
import yellowApples from "@images/yellow-apples.jpg";
import orchards from "@images/orchards.jpg";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Variétés de Pommes Premium du Climat Parfait d'Ajdir",
    subTitle:
      "Nichés au cœur des montagnes du Moyen Atlas marocain, nos vergers à Ajdir bénéficient des conditions météorologiques idéales de la région, des eaux de montagne pures et d'un sol riche. Nous cultivons les meilleures variétés de pommes, soigneusement sélectionnées pour leur goût exceptionnel, leur texture et leur valeur nutritionnelle. Notre équipe d'experts s'assure que chaque arbre reçoit les soins parfaits nécessaires pour produire des pommes de qualité premium.",
    single: false,
    imgOne: rose,
    imgOneAlt: "Plans de verger et tablette numérique avec des plans de culture.",
    imgTwo: personWorking,
    imgTwoAlt: "Agriculteur travaillant au bureau du verger",
  },
  {
    isRightSection: false,
    title: "Excellence Agricole Durable dans le Moyen Atlas",
    subTitle:
      "Nos vergers représentent l'harmonie parfaite entre la sagesse agricole traditionnelle et les pratiques agricoles modernes. Situés à Ajdir, au Maroc, nous tirons parti des avantages naturels de la région : eau de montagne pure, altitude optimale et les meilleures mains d'œuvre avec des générations d'expertise agricole. Nos pratiques durables garantissent que chaque pomme que nous cultivons répond aux normes de qualité les plus élevées tout en préservant la beauté naturelle de la région du Moyen Atlas.",
    img: treeCover,
    imgAlt: "Développement du verger avant et après",
    btnExists: true,
    btnTitle: "En savoir plus",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Infrastructure et Expertise : La Fondation de la Qualité",
    subTitle:
      "Dans nos vergers d'Ajdir, nous avons investi dans la meilleure infrastructure pour soutenir nos opérations de culture de pommes. Des systèmes d'irrigation avancés qui utilisent les eaux de montagne pures de la région aux installations de stockage de pointe, chaque aspect de notre exploitation est conçu pour l'excellence. Notre équipe combine l'expertise locale avec les techniques agricoles modernes, garantissant une qualité constante année après année.",
    single: false,
    imgOne: applebasket,
    imgOneAlt: "Ouvriers du verger gérant les pommiers",
    imgTwo: aerialView,
    imgTwoAlt: "Vue aérienne du verger géré",
  },
  {
    isRightSection: false,
    title: "De l'Arbre à la Table : Production Complète de Pommes",
    subTitle:
      "Notre engagement envers la qualité s'étend du moment où nous plantons nos pommiers à la livraison de pommes fraîches et croquantes à votre table. Nous maintenons un contrôle qualité rigoureux tout au long du processus, de la sélection et plantation soigneuses des arbres à la récolte à maturité optimale. Nos installations à Ajdir sont équipées de la technologie la plus récente pour préserver la fraîcheur et la saveur de nos pommes.",
    img: harvestSet,
    imgAlt:
      "Agriculteur en tenue de verger utilisant des outils agricoles durables",
  },
  {
    isRightSection: true,
    title: "Exporter les Meilleures Pommes du Maroc dans le Monde",
    subTitle:
      "En tant que producteur de pommes leader dans la région du Moyen Atlas marocain, nous sommes fiers d'exporter nos variétés premium vers les marchés du monde entier. Notre emplacement stratégique à Ajdir, combiné à notre infrastructure supérieure et notre équipe d'experts, nous permet de livrer des pommes de qualité constamment élevée qui répondent aux normes internationales. Nous travaillons en étroite collaboration avec nos clients pour nous assurer que leurs exigences spécifiques sont satisfaites avec les meilleures pommes des conditions de croissance parfaites du Maroc.",
    single: false,
    imgOne: redApples,
    imgOneAlt: "Verger en développement avec de jeunes arbres",
    imgTwo: yellowApples,
    imgTwoAlt: "Verger en développement avec systèmes d'irrigation",
    btnExists: true,
    btnTitle: "Lire la suite",
    btnURL: "#",
  },
];
---

<MainLayout
  title="Verger | tresorajdir"
  lang="fr"
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://tresorajdir.com/fr/orchard",
    url: "https://tresorajdir.com/fr/orchard",
    name: "Verger de Pommes Premium à Ajdir, Maroc | tresorajdir",
    description:
      "Découvrez les variétés de pommes premium cultivées dans le climat parfait d'Ajdir, dans le Moyen Atlas marocain. Nos vergers bénéficient des eaux de montagne pures, d'un climat idéal et de pratiques agricoles expertes.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://tresorajdir.com/fr",
      name: "tresorajdir",
      description:
        "tresorajdir propose des variétés de pommes premium cultivées dans le climat parfait d'Ajdir, dans les montagnes du Moyen Atlas marocain.",
    },
    inLanguage: "fr",
  }}
>
  {/* MainSection is the introductory section of the page with background image */}
  <MainSection
    title="Pommes Premium de la Région de Culture Parfaite du Maroc"
    subTitle="Situés au cœur d'Ajdir, dans les montagnes du Moyen Atlas marocain, nos vergers bénéficient du climat idéal de la région, des eaux de montagne pures et d'un sol riche. Nous cultivons les meilleures variétés de pommes en utilisant des pratiques agricoles durables et l'expertise des agriculteurs locaux avec des générations d'expérience."
    backgroundImage={orchards}
  />

  {/* FeaturesStats section showcases essential stats valuable to users */}
  <FeaturesStats
    title="Notre Excellence de Verger"
    subTitle="Notre engagement envers la qualité et l'agriculture durable est évident dans chaque pomme que nous produisons. Chez tresorajdir, nous nous engageons à livrer des pommes premium qui mettent en valeur les conditions de croissance parfaites de la région du Moyen Atlas marocain."
    mainStatTitle="100%"
    mainStatSubTitle="de nos clients évaluent la qualité de nos pommes comme exceptionnelle"
    stats={[
      {
        stat: "99%",
        description: "taux de réussite de récolte",
      },
      {
        stat: "10 000+",
        description: "pommiers prospérant à Ajdir",
      },
      {
        stat: "100%",
        description: "satisfaction client année après année",
      },
    ]}
  />


   {/* FourImageSection showcases orchard images in a grid layout */}
   <FourImageSection
   imgOne={aerialView}
   imgOneAlt="Orchard planning and digital tablet with farming plans"
   imgTwo={personWorking}
   imgTwoAlt="Farmer working in the orchard office"
   imgThree={applebasket}
   imgThreeAlt="Orchard workers managing apple trees"
   imgFour={rose}
   imgFourAlt="Aerial view of managed orchard"
 />


  {/* RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  */}
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  
</MainLayout>
