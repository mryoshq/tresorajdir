const description = "Lisez les conditions générales d'utilisation du site web et des services de Trésor d'Ajdir. Découvrez nos politiques et vos droits.";
---

<MainLayout title={title} customDescription={description} lang="fr">
  <div class="bg-white dark:bg-neutral-900">
    <div class="mx-auto max-w-4xl px-4 py-16 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-neutral-900 dark:text-white mb-4">
          Conditions Générales
        </h1>
        <p class="text-lg text-neutral-600 dark:text-neutral-300">
          Trésor d'Ajdir - Verger de Pommes Premium
        </p>
        <p class="text-sm text-neutral-500 dark:text-neutral-400 mt-2">
          Dernière mise à jour : {new Date().toLocaleDateString('fr-FR', { year: 'numeric', month: 'long', day: 'numeric' })}
        </p>
      </div>

      <!-- Content -->
      <div class="prose prose-lg max-w-none dark:prose-invert">
        <section class="mb-8">
          <h2 class="text-2xl font-semibold text-neutral-900 dark:text-white mb-4">1. Introduction</h2>
          <p class="text-neutral-700 dark:text-neutral-300 mb-4">
